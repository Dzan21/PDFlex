from fastapi import FastAPI
from sqlalchemy import text
from app import db
from app.routes_users import router as users_router
from app.routes_billing import router as billing_router

from app import routes_documents
app.include_router(routes_documents.router, prefix="/documents")
from app import routes_documents
app.include_router(routes_documents.router, prefix="/documents")
app = FastAPI(title="PDFlex API")

@app.get("/health")
def health():
    return {"status": "ok"}

@app.get("/db-check")
def db_check():
    try:
        with db.engine.connect() as conn:
            version = conn.execute(text("SELECT version();")).scalar_one()
        return {"database_version": version}
    except Exception as e:
        return {"error": str(e)}

app.include_router(users_router)
app.include_router(billing_router)

# --- docs/upload routes ---
